@model Review
@{
    ViewBag.Title = "Add Review";

}

<h1 class="text-center">Add Review</h1>

<form asp-action="AddReview" asp-controller="Review" method="post">
    <div class="form-group">
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating" class="form-control-sm">
            <option value="" selected disabled>Select a rating</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Comment">Comment</label>
        <textarea asp-for="Comment" class="form-control-sm"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-controller="Review" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>